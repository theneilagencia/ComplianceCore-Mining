FROM node:22-slim

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy migrations
COPY drizzle ./drizzle
COPY scripts/run-migrations.ts ./scripts/

# Run migrations
CMD ["pnpm", "tsx", "scripts/run-migrations.ts"]
